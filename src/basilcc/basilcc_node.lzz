namespace basilcc
{
  class Node
  {
  public:
    Node (char const * name)
      : m_num (0), m_name (name)
    {}
    ~ Node ()
    {}
    // set/get number
    void setNumber (int num)
    {
      m_num = num;
    }
    int getNumber () const
    {
      return m_num;
    }
    // get name
    char const * getName () const
    {
      return m_name;
    }
  private:
    int m_num;
    char const * m_name;
  }

  // true if a name < b name
  bool nodeNameLess (Node const * a, Node const * b)
  {
    return strcmp (a->getName (), b->getName ()) < 0;
  }
}

