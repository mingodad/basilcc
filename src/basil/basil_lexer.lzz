// lexer abstract interface
namespace basil
{
   class Loc;

   class Lexer
   {
   public:
      Lexer()
      {}
      virtual ~Lexer()
      {}

      // lex next token, set location and lexeme and return token number
      virtual int getNextToken(int lex_state, Loc &loc, std::string &lexeme) = 0;
   }
}

